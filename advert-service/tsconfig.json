{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ES2024"],
    "rootDir": ".",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowJs": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#internal/*": ["internal/*"],
      "#pkg/*": ["pkg/*"],
      "#cmd/*": ["cmd/*"],
      "#prisma/*": ["prisma/*"],
      "#delivery/*": ["delivery/*"]
    }
  },
  "include": [
    "delivery/**/*",
    "cmd/**/*",
    "internal/**/*",
    "pkg/**/*",
    "prisma.config.ts",
    "src"
, "delivery/http/interfaces"  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true
  }
}
